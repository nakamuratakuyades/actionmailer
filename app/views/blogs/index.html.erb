<h1>ブログ一覧</h1>
<p><%= notice %></p>

<table class="table table-striped">
  <tr>
    <th>タイトル</th><th>内容</th><th></th><th></th><th></th>
  </tr>

  <% @blogs.each do |blog| %>
  <tr>
    <th><%= blog.title %></th>
    <th><%= blog.content %></th>
    <th><%= link_to '詳細', blog_path(blog.id) %></th>
    <th><%= link_to '編集', edit_blog_path(blog.id), data: { confirm: '本当に編集していいですか？' } %></th>
    <th><%= link_to '削除', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></th>
  </tr>
  <% end %>
</table>

<a class="btn active" href="blogs/new" role="button">新しくブログを投稿する</a>
